{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "server/**",
      "client/**",
      "shared/**"
    ]
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 5,
    "numReplicas": 1,
    "region": "us-west1",
    "sleepApplication": false
  },
  "environments": {
    "production": {
      "build": {
        "buildCommand": "CI=false npm run build"
      }
    }
  }
}